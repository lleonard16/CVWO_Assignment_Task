<p id="notice"><%= notice %></p>

<h1>Todo Lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr>
        <td><%= todo_list.title %></td>
        <td><%= todo_list.description %></td>
        <td><%= link_to '<i class="far fa-eye"></i>'.html_safe, todo_list %></td>
        <td><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_todo_list_path(todo_list) %></td>
        <td><%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, todo_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo List', new_todo_list_path %>
