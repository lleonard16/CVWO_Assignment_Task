<p id="notice"><%= notice %></p>

<h1>Todo Lists</h1>

<h3>Date and Time</h3>
<body>
<span id="cg"></span>
<script>
setInterval("cg.innerHTML=new Date().toLocaleString()",1000);
</script>
<br> <br/>
</body>

<table>
  <thead>
    <tr>
      <th>Title&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
      <th>Description</th>
      <th colspan="30"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr>
        <td><%= todo_list.title%>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
        <td><%= todo_list.description %></td>
        <td><%= link_to '&emsp;&emsp;&emsp; <i class="far fa-eye" size: 11x;></i>'.html_safe, todo_list %></td>
        <td><%= link_to '&emsp;&emsp;&emsp; <i class="fas fa-edit"></i>'.html_safe, edit_todo_list_path(todo_list) %></td>
        <td><%= link_to '&emsp;&emsp;&emsp; <i class="fas fa-trash-alt"></i>'.html_safe, todo_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

